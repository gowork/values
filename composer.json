{
    "name": "gowork/values",
    "type": "library",
    "description": "PHP primitive types value objects.",
    "keywords": ["primitive", "type", "value object"],
    "license": "MIT",
    "authors": [
        {
            "name": "Damian Zaprzałek",
            "email": "sz.p.damian@gmail.com"
        },
        {
            "name": "Bronisław Białek",
            "email": "after89@gmail.com"
        },
        {
            "name": "Dawid Łakomski",
            "email": "dawid.lakomski@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpspec/phpspec": "^7.0",
        "phpstan/phpstan": "^1.0",
        "phpbench/phpbench": "@dev",
        "phpunit/phpunit": "^9.0",
        "phpstan/extension-installer": "^1.0",
        "vimeo/psalm": "^4.0",
        "friends-of-phpspec/phpspec-code-coverage": "^6.0",
        "squizlabs/php_codesniffer": "^3.6",
        "phpcompatibility/php-compatibility": "^9.3"
    },
    "autoload": {
        "psr-4": {
            "GW\\Value\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "spec\\GW\\Value\\": "spec/",
            "tests\\GW\\Value\\": "tests/",
            "doc\\GW\\Value\\": "examples/"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "scripts": {
        "post-install-cmd": "bin/phpcs --config-set installed_paths vendor/phpcompatibility/php-compatibility",
        "post-update-cmd" : "bin/phpcs --config-set installed_paths vendor/phpcompatibility/php-compatibility"
    },
    "extra": {
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        }
    }
}
